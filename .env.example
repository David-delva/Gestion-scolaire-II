# Configuration de l'environnement
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Mode de l'application (development, production)
APP_ENV=development

# Configuration de la base de données
DB_HOST=localhost
DB_NAME=gestion_scolaire
DB_USER=root
DB_PASS=

# Configuration de sécurité
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=3600

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configuration email (pour les notifications futures)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@gestion-etudiants.local